[core]
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  true-color = always
  navigate = true    # use n and N to move between diff sections
  side-by-side = true
  line-numbers = true
  hyperlinks = true
  hyperlinks-file-link-format = "file-line://{path}:{line}"

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
